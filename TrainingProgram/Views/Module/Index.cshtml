@model ModuleIndexViewModel
    <form  asp-controller="Module" method="post" asp-action="Index">
        <div class="row">
            <div class="col col-md-12 table-responsive-md">
                <h3 class="alert-heading">Modules</h3>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="FLDPROGRAMID"></label>
                    </div>
                    <div class="form-group col-md-3">

                        <select asp-for="FLDPROGRAMID" 
                                asp-items="@(new SelectList(Model.Programs,"FLDPROGRAMID","FLDPROGRAMNAME",Model.FLDPROGRAMID))" onchange="form.submit();">
                            <option s>Select</option>
                        </select>
                    </div>
                </div>
                <div class="form-group col-md-12">
                    <a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create" asp-route-id="@Model.FLDPROGRAMID">New Module</a>
                </div>
                <div class="form-group col-md-12">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>

                                <th class="text-warning">Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Modules)
                            {
                                <tr>
                                    <td>

                                        @item.FLDMODULECODE


                                    </td>

                                    <td>
                                        @item.FLDMODULENAME
                                    </td>

                                    <td>
                                        <a class="text-primary" asp-action="Edit" asp-route-id="@item.FLDMODULEID" title="Edit"><i class="fas fa-edit"></i> </a>


                                    </td>
                                </tr>


                            }

                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </form>
